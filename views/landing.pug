block content
  main.main#main-landing
    +title-1('Connect Four')

    h2.title--2 Classroom Games by Nick de Waal

    .container.container--game
      
      .game-board
        .end-game-container.status.hidden
          
        .game-buttons
          button.full-screen-btn Full Screen
          button.review-btn Review
          button.undo-btn Undo
          button.new-game-btn New Game
          button.reset-btn Reset
          
          
          


